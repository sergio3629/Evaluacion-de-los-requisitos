      Error:<br>
      Status: 500<br>
      <pre>{
  "status": 500,
  "message": "Error en el sistema: Descripción del error"
}</pre>
    </td></tr>
    <tr><td>Desarrollador</td> <td>Sergio Canacue España</td></tr>
  </table>
  
  <hr><br>
  
  <!-- Eliminar Raza -->
